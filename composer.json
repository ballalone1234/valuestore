{
    "name": "spatie/valuestore",
    "description": "Easily store some values",
    "keywords": [
        "spatie",
        "valuestore",
        "json"
    ],
    "homepage": "https://github.com/spatie/valuestore",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        },
        {
            "name": "Jolita Grazyte",
            "email": "jolita@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Valuestore\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Valuestore\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "check": [
            "@test",
            "@analyse"
        ],
        "example": "php example.php",
        "check-version": "php check-php-version.php"
    },
    "scripts-descriptions": {
        "test": "Run the PHPUnit test suite",
        "test-coverage": "Run tests with code coverage report",
        "analyse": "Run PHPStan static analysis",
        "check": "Run all checks (tests + static analysis)",
        "example": "Run the example script",
        "check-version": "Check PHP version compatibility"
    }
}
